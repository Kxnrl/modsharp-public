{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../Sharp.Shared",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "output": "api",
      "namespaceLayout": "nested",
      "memberLayout": "separatePages"
    },
    {
      "src": [
        {
          "src": "../Sharp.Extensions",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "output": "api-extensions",
      "namespaceLayout": "nested",
      "memberLayout": "separatePages"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "ModSharp",
      "_appTitle": "ModSharp",
      "_disableNewTab": false,
      "_disableBreadcrumb": false,
      "_disableToc": false,
      "_disableAffix": false,
      "_disableNextArticle": true,
      "_enableSearch": true,
      "_lang": "zh-cn",
      "_appLogoPath": "images/icon.svg",
      "_appFaviconPath": "images/icon.svg",
      "_appFooter": "<span>ModSharp by <a href=\"https://github.com/SourceSharp\">ModSharp dev Team</a>. Doc made with <a href=\"https://dotnet.github.io/docfx\">docfx</a></span>",
      "pdf": false
    }
  }
}